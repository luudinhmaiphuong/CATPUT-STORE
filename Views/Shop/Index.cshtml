@model List<CatputStore.Models.ProductModel>

<!-- CSS -->
<style>
    /* Layout tổng */
    .shop-container {
        display: flex;
        gap: 10px;
        padding: 20px 50px;
        animation: fadeIn 0.6s ease;
    }
    /* Wrapper giới hạn chiều ngang grid */
    .product-grid-wrapper {
        width: 75%; /* grid chỉ chiếm 75% chiều ngang */
        margin: 0 auto; /* canh giữa */
    }
    /* Grid sản phẩm */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        animation: fadeIn 0.8s ease;
    }

    /* Card sản phẩm */
    .product-card {
        background: #ffffff;
        padding: 6px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.12);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        cursor: pointer;
    }
    /* Tiêu đề Cửa hàng */
    .shop-title {
        color: #ff7ca8;
    }

    /* Tên sản phẩm */
    .product-name {
        color: #525252;
        font-weight: 550;
        transition: color 0.2s ease;
    }

    .product-name:hover {
        color: #013970;
    }
    .product-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.40);
    }

    .product-card img {
        width: 100%;
        border-radius: 15px;
        transition: transform 0.25s ease;
    }

    .product-card:hover img {
        transform: scale(1.08);
    }

    /* Button */
    .btn-add {
        width: 100%;
        padding: 9px;
        background: #ff7ca8;
        border: none;
        color: white;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
        transition: background 0.25s, transform 0.25s;
    }

    .btn-add:hover {
        background: #ff6398;
        transform: translateY(-3px);
    }

    /* Star */
    .stars span {
        color: #f7c20a;
        font-size: 18px;
    }
</style>


<div class="shop-container">
    <!-- PRODUCTS -->
    <div style="flex:1; display:flex; justify-content:center;">
    <div class="product-grid-wrapper">
           <!-- TIÊU ĐỀ CHÍNH -->
        <h1 class="text-center mb-4"
            style="
                font-weight:600;
                text-align:center;
                font-size:28px;
                padding-bottom:8px;
                border-bottom:4px solid #ffd1e6;
                display:inline-block; <!--để gạch chỉ dài bằng chữ -->
            ">
            Cửa hàng
        </h1>
        <div class="product-grid">
            @foreach (var p in Model)
            {
                <div class="product-card">
                    <img src="@p.ImageUrl" alt="@p.Name" />

                    <div style="padding:10px 5px;">
                        <div style="color:#f783b4; font-size:14px;">@p.Category</div>

                        <h4 class="product-name" style="margin:5px 0;">@p.Name</h4>

                        <div class="stars" style="margin-bottom:5px;">
                            @for (int i = 0; i < p.Rating; i++)
                            {
                                <span>★</span>
                            }
                        </div>

                        <div style="margin-bottom:10px;">
                            <span style="text-decoration:line-through; color:#999;">@p.OldPrice đ</span>
                            <span style="font-weight:bold; margin-left:5px;">@p.Price đ</span>
                        </div>

                        <button class="btn-add">Thêm vào giỏ hàng</button>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
